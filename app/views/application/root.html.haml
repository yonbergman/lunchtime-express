%h2
  Welcome to the area
  .lead Here are some places you should check out

.row
  .map.col-sm-6.col-sm-push-6.col-xs-12
    <div id="gmap_canvas"></div>
    <style>#gmap_canvas img{max-width:none!important;background:none!important}</style>

  .col-sm-6.col-sm-pull-6.col-xs-12
    .list-group
      - Restaurant.all.shuffle.each do |restaurant|
        %a{:href => '#', class: 'list-group-item rest', :id => restaurant.token}
          = render 'application/restaurant', restaurant: restaurant

  <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
  :javascript
    function init_map(){
      var myOptions = {
        zoom:16,
        center:new google.maps.LatLng(32.0630316,34.771679800000015),
        mapTypeId: google.maps.MapTypeId.ROADMAP
       };
      map = new google.maps.Map(document.getElementById("gmap_canvas"), myOptions);
      infowindow = new google.maps.InfoWindow();
      window.all_markers = {}
      _.each(#{Restaurant.all.to_json}, function(restaurant){
        if (restaurant.location){
           var marker = new google.maps.Marker({
                position: new google.maps.LatLng(restaurant.location.lat,restaurant.location.lng),
                map: map,
                token: restaurant.token
            });
            window.all_markers[restaurant.token] = marker;
            google.maps.event.addListener(marker, "click", function(){
              content = $("#" + restaurant.token).html()
              infowindow.setContent(content);
              infowindow.open(map,marker);
            });
        }
      })

    }
    google.maps.event.addDomListener(window, 'load', init_map);
    $('.rest').click(function(ev){
      var id = $(ev.target).closest('.rest').attr('id');
      var marker = all_markers[id];
      if (marker){
        new google.maps.event.trigger( marker, 'click' );
      }
      return false;
    })